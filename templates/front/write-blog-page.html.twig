{% extends 'base.html.twig' %}
{% block title %}Pisanko{% endblock %}
{% block body %}

   <style>
      .example-wrapper {
         margin: 1em auto;
         max-width: 800px;
         width: 95%;
         font: 18px/1.5 sans-serif;
      }

      .example-wrapper code {
         background: #F5F5F5;
         padding: 2px 6px;
      }
   </style>

<div class="example-wrapper">
   <h2>Piszemy bloga</h2>
   <form method="POST" action="{{ path('write_blog') }}">
      <input name="title" type="text" id="myInput" placeholder="Post title..."/>
      <input name="content" type="text" id="content" placeholder="Post content"/>
      <button type="submit" class="addBtn">Opublikuj</button>
   </form>
</div>

{% endblock %}
